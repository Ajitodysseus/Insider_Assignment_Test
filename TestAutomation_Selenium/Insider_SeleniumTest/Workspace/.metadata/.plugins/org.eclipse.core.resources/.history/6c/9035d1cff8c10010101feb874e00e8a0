package PO.CommonFunctionality;

import java.util.HashMap;
import java.util.Map;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;
import org.openqa.selenium.edge.EdgeDriver;
import org.openqa.selenium.edge.EdgeOptions;
import org.testng.annotations.BeforeSuite;
import Utility.ExtentReports.ExtentRepotEx;
import io.github.bonigarcia.wdm.WebDriverManager;


public class BaseClass extends ExtentRepotEx
{

	public  WebDriver driver;


	@BeforeSuite
	public void setUp()
	{

		try
		{
			// System.setProperty("webdriver.chrome.driver", "./Driver/chromedriver.exe"); // We can use this for static driver
			 
			   WebDriverManager.chromedriver().setup(); // Latest driver will be take automatically.
			//   WebDriverManager.edgedriver().setup();

			  Map<String, Object> prefsMap = new HashMap<String, Object>();
			  prefsMap.put("profile.default_content_settings.popups", 0);

			      ChromeOptions option = new ChromeOptions();
				  option.setExperimentalOption("prefs", prefsMap);
				  option.addArguments("--test-type");
				  option.addArguments("--disable-extensions");

				  driver = new ChromeDriver(option);
  			      driver.manage().window().maximize();

		} catch (Exception e)
		{
			System.out.println(e);
		}
	}

	/*@AfterSuite
	public void TearDown(){

		try {
			driver.close();
			driver.quit();
	} catch (Exception e) {

			System.out.println(e);
		}
	}*/

}
